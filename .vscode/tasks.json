{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Simulate Verilog",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/dataproc_dv",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Verilog Build",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/dataproc_dv",
                "clean"
            ]
        }
    ]
}
